{
    "name": "@microsoft/vscode-container-runtimes",
    "author": "Microsoft Corporation",
    "version": "0.0.1-alpha",
    "description": "Extensibility model for implementing container runtime providers (shared by VS and VS Code)",
    "license": "See LICENSE in the project root for license information.",
    "repository": {
        "type": "git",
        "url": "https://github.com/microsoft/vscode-docker-extensibility"
    },
    "bugs": {
        "url": "https://github.com/microsoft/vscode-docker/issues"
    },
    "homepage": "https://github.com/microsoft/vscode-docker-extensibility/blob/main/README.md",
    "main": "lib/index.js",
    "scripts": {
      "build": "tsc",
      "clean": "tsc --build --clean",
      "lint": "eslint --max-warnings 0 . --ext ts",
      "test": "mocha",
      "testwatch": "mocha --watch",
      "testreport": "mocha --reporter mocha-junit-reporter"
    },
    "dependencies": {
      "dayjs": "^1.10.7",
      "vscode-jsonrpc": "^6.0.0"
    },
    "devDependencies": {
      "@types/chai": "^4.3.0",
      "@types/mocha": "^9.1.0",
      "@types/node": "^14.18.10",
      "@types/vscode": "^1.63.1",
      "@typescript-eslint/eslint-plugin": "^5.10.2",
      "@typescript-eslint/parser": "^5.10.2",
      "chai": "^4.3.6",
      "eslint": "^8.8.0",
      "mocha": "^9.2.0",
      "mocha-junit-reporter": "^2.0.2",
      "ts-loader": "^9.2.6",
      "ts-node": "^10.4.0",
      "tsconfig-paths": "^3.12.0",
      "typescript": "^4.5.5"
    },
    "mocha": {
      "extension": [
        "ts"
      ],
      "require": [
        "ts-node/register",
        "./tsconfig-paths-bootstrap.js"
      ],
      "spec": [
        "test/**/*.test.ts"
      ],
      "watch-files": [
        "src/**/*.ts",
        "test/**/*.ts"
      ]
    }
  }
