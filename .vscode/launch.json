    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Container runtime tests",
            "request": "launch",
            "runtimeArgs": [
                "test",
                "--workspace=packages/container-runtimes"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Container runtime extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-container-runtimes"
            ],
            "outFiles": [
                "${workspaceFolder}/packages/vscode-container-runtimes/dist/**/*.js"
            ],
            "preLaunchTask": "npm-watch: vscode-container-runtimes"
        },
        {
            "name": "Docker registries tests",
            "request": "launch",
            "runtimeArgs": [
                "test",
                "--workspace=packages/vscode-docker-registries"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}
