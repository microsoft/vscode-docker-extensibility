{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Container client unit tests",
            "request": "launch",
            "runtimeArgs": [
                "test",
                "--workspace=packages/vscode-container-client"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "preLaunchTask": "Build+Watch+CJS: vscode-processutils"
        },
        {
            "name": "Container client integration tests",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "testintegration",
                "--workspace=packages/vscode-container-client"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "CONTAINER_CLIENT_TYPE": "${input:containerRuntime}", // Set to 'docker' or 'podman'
                "RUN_IN_WSL": "0", // Set to 1 if running in WSL
                "DOCKER_HUB_USERNAME": "${input:dockerHubUsername}",
                "DOCKER_HUB_PAT": "${input:dockerHubPAT}"
            },
            "type": "node",
            "preLaunchTask": "Build+Watch+CJS: vscode-processutils"
        },
        {
            "name": "Process utils unit tests",
            "request": "launch",
            "runtimeArgs": [
                "test",
                "--workspace=packages/vscode-processutils"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Process utils integration tests",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "testintegration",
                "--workspace=packages/vscode-processutils"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Docker registries tests",
            "request": "launch",
            "runtimeArgs": [
                "test",
                "--workspace=packages/vscode-docker-registries"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ],
    "inputs": [
        {
            "id": "containerRuntime",
            "type": "pickString",
            "description": "Select the container runtime to use for integration tests",
            "options": [
                "docker",
                "podman"
            ],
            "default": "docker"
        },
        {
            "id": "dockerHubUsername",
            "type": "promptString",
            "description": "Enter your Docker Hub username (or leave blank to skip the login test)",
            "default": ""
        },
        {
            "id": "dockerHubPAT",
            "type": "promptString",
            "description": "Enter your Docker Hub Personal Access Token (or leave blank to skip the login test)",
            "default": "",
            "password": true
        }
    ]
}
