{
    "compilerOptions": {
        "target": "es2022",
        "lib": [
            "es2022"
        ],
        "module": "es2022",
        "moduleResolution": "bundler",
        "sourceMap": true,
        "inlineSources": false,
        "declaration": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "stripInternal": true
    },
    "exclude": [
        "**/node_modules",
        "**/dist"
    ]
}
