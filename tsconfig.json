{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "lib": [
            "es2018"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": false,
        "declaration": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "stripInternal": true
    },
    "exclude": [
        "node_modules"
    ]
}
